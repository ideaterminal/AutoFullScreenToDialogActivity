<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/afda_activity_main_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".AutoFullScreenToDialogActivity">

    <LinearLayout
        android:id="@+id/afda_activity_main_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <Button
        android:id="@+id/afda_activity_main_bottombutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/afda_activity_main_placeholder"/>

</RelativeLayout>
